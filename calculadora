programa
{
	
	funcao inicio()
	{
		calculadora()
	}

       funcao calculadora(){
       	inteiro esc
          real x=0.0
          real y=0.0
       	cadeia ctz
       	escreva("==========calculadora=========\n")
       	escreva("soma[1]\n")
       	escreva("subtração[2]\n")
       	escreva("divisão[3]\n")
       	escreva("multiplicação[4]\n")
       	escreva("sair[5]\n")
       	escreva("===============================\n")
       	escreva("qual deseja realizar?\n")

       	leia(esc)

       	escolha(esc){

			caso 1: 

			
      	   escreva("informe o primeiro valor")
	        leia(x)
	        escreva("informe o  valor que sera somado ao primeiro")
	        leia(y)
			soma(x,y)
			calculadora()
			
			pare

			
			caso 2:
			
			
      	   escreva("informe o primeiro valor")
	        leia(x)
	        escreva("informe o  valor que sera subtraido do primeiro")
	        leia(y)
	        subtracao(x,y)
	        calculadora()

	        
			pare

			 
			caso 3: 
			
      	    escreva("informe o primeiro valor")
	         leia(x)
	         escreva("informe o  valor que ira dividir o primeiro")
	         leia(y)
			divisao(x,y)
			calculadora()
			
			
			pare
			
			caso 4:
			
      	     escreva("informe o primeiro valor")
	          leia(x)
	          escreva("informe o  valor que ira multiplicar o primeiro")
	          leia(y)
			multiplicacao(x,y)
			calculadora()
			pare 


			
	          caso 5: escreva("deseja mesmo sair?")
	          leia(ctz)
	          se(ctz=="sim"){
	          	pare
	          }senao{
	          	calculadora()
	          	}
			pare 
			caso contrario: escreva("opção não encontrada")
			calculadora()
			pare
		}
       }

      funcao soma(real x ,real y){
      	
      	
      	escreva(x+y,"\n")
      	   
      }

      funcao subtracao(real x ,real y){
     
      	escreva(x-y,"\n")
      }
      
      funcao divisao(real x ,real y){
    
      
      	escreva(x/y,"\n")
      	
      }
       funcao multiplicacao(real x ,real y){
       
      
      	escreva(x*y,"\n")
      }



	
}
