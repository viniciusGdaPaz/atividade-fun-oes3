programa
{
	
	funcao inicio()
	{
		calculadora()
	}

       funcao calculadora(){
       	inteiro esc
       	escreva("==========calculadora=========")
       	escreva("soma[1]\n")
       	escreva("subtração[2]\n")
       	escreva("multiplicação[3]\n")
       	escreva("divisão[4]\n")
       	escreva("sair[5]")
       	escreva("==============================")
       	escreva("qual deseja realizar?\n")

       	leia(esc)

       	escolha(esc){

			caso 1: soma()
			pare
			caso 2:subtracao()
			pare 
			caso 3: divisao()
			pare
			caso 4: multiplicacao()
			pare
			caso 5: 
			pare
			caso contrario: escreva("contrario")
			pare
		}
       }

      funcao soma(){
      inteiro x=0
      inteiro y=0
      	
      	escreva("informe o primeiro   valor")
	     leia(x)
	     escreva("informe o  valor que sera somado ao primeiro")
	     leia(y)
      	
      	escreva(x+y)
      	   
      }

      funcao subtracao(){
      inteiro x=0
      inteiro y=0
      
      	escreva("informe o primeiro   valor")
	     leia(x)
	     escreva("informe o  valor que sera subtraido do  primeiro")
	     leia(y)
      	escreva(x-y)
      }
      
      funcao divisao(){
      inteiro x=0
      inteiro y=0
      
      	escreva("informe o primeiro   valor")
	     leia(x)
	     escreva("informe o  valor que sera o divisor do  primeiro")
	     leia(y)
      	escreva(x-y)
      	
      }
){
      	escreva(x*y)
      }



	
}
